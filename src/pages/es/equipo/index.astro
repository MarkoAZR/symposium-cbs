          image="/symposium-cbs/images/team/Valery_Velasquez.jpg"
          links={[
            { icon: "link", href: "#" },
            { icon: "mail", href: "mailto:valery.velasquez@unmsm.edu.pe" },
          ]}
        />
        <TeamMemberCard
