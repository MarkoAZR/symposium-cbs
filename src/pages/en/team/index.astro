          image="/symposium-cbs/images/team/Jorja_lavado.png"
          links={[
            { icon: "link", href: "#" },
            { icon: "mail", href: "mailto:sofia@cbs-unmsm.com" },
          ]}
        />
        <TeamMemberCard
          name="Adriana Ordinola"
          role="Marketing and Design"
