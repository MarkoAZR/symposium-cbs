---
interface Props {
  name: string;
  role: string;
  department: string;
  image: string;
  links?: Array<{
    icon: string;
    href: string;
  }>;
}

const {
  name,
  role,
  department,
  image,
  links = []
} = Astro.props;
---

<div class="group relative bg-white dark:bg-slate-800 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-slate-100 dark:border-slate-700">
  <!-- Image Container -->
  <div class="aspect-square w-full overflow-hidden bg-slate-200 dark:bg-slate-700">
    <img 
      alt={name}
      class="h-full w-full object-cover object-center group-hover:scale-105 transition-transform duration-500" 
      src={image}
    />
  </div>
  
  <!-- Content -->
  <div class="p-6 text-center">
    <h3 class="text-lg font-bold text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
      {name}
    </h3>
    <p class="mt-1 text-sm text-blue-600 dark:text-blue-400 font-medium">{role}</p>
    <p class="mt-3 text-sm text-slate-500 dark:text-slate-400">{department}</p>
    
    <!-- Social Links -->
    {links.length > 0 && (
      <div class="mt-4 flex justify-center space-x-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        {links.map((link) => (
          <a 
            href={link.href}
            class="text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
          >
            <span class="material-icons text-lg">{link.icon}</span>
          </a>
        ))}
      </div>
    )}
  </div>
</div>
