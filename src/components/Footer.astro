---
interface Props {
  lang?: string;
}

const { lang = "es" } = Astro.props;

const footerContent =
  lang === "es"
    ? {
        companyName: "CBS-UNMSM",
        description:
          "Comunidad de Biología Sintética de la Universidad Nacional Mayor de San Marcos. Promoviendo investigación, educación e innovación en biología sintética.",
        sympSection: "Simposio",
        sympLinks: [
          { href: "/symposium-cbs/es/programa/", label: "Programa" },
          { href: "/symposium-cbs/es/recursos/", label: "Recursos" },
          { href: "/symposium-cbs/es/equipo/", label: "Equipo" },
          { href: "https://forms.gle/m33aPiedWLpj1Ed8A", label: "Registro" },
        ],
        contactSection: "Contacto",
        contactEmail: "cbsunmsm@gmail.com",
        contactLocation: "Lima, Perú",
        copyright:
          "© 2026 CBS-UNMSM I Simposio Internacional. Todos los derechos reservados.",
      }
    : {
        companyName: "CBS-UNMSM",
        description:
          "Synthetic Biology Community of the National University of San Marcos. Promoting research, education and innovation in synthetic biology.",
        sympSection: "Symposium",
        sympLinks: [
          { href: "/symposium-cbs/en/program/", label: "Program" },
          { href: "/symposium-cbs/en/resources/", label: "Resources" },
          { href: "/symposium-cbs/en/team/", label: "Team" },
          { href: "https://forms.gle/m33aPiedWLpj1Ed8A", label: "Register" },
        ],
        contactSection: "Contact",
        contactEmail: "cbs.unmsm@gmail.com",
        contactLocation: "Lima, Peru",
        copyright:
          "© 2026 CBS-UNMSM International Symposium. All rights reserved.",
      };
---

<footer
  class="bg-white dark:bg-neutral-900 border-t border-neutral-200 dark:border-neutral-800 py-12"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      <!-- Column 1: Logo + Description -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center gap-3 mb-4">
          <div
            class="h-10 w-10 flex-shrink-0 rounded-full overflow-hidden border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-[#122240]"
          >
            <img
              src="/symposium-cbs/cbs_logo.svg"
              alt="Logo CBS"
              class="h-full w-full object-contain scale-125 transition-transform"
              loading="eager"
            />
          </div>
          <span
            class="font-display font-bold text-xl text-primary-800 dark:text-white"
          >
            {footerContent.companyName}
          </span>
        </div>
        <p class="text-neutral-600 dark:text-neutral-400 text-sm max-w-sm mb-6">
          {footerContent.description}
        </p>
        <div class="flex space-x-4">
          <a
            href="https://www.facebook.com/cbsunmsm"
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
              ><path
                d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
              ></path></svg
            >
          </a>
          <a
            href="https://www.instagram.com/cbsunmsm/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-400 hover:text-pink-600 dark:hover:text-pink-400 transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
              ><path
                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1 1 12.324 0 6.162 6.162 0 0 1-12.324 0zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm4.965-10.322a1.44 1.44 0 1 1 2.881.001 1.44 1.44 0 0 1-2.881-.001z"
              ></path></svg
            >
          </a>
          <a
            href="https://www.linkedin.com/company/cbs-unmsm/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-400 hover:text-blue-700 dark:hover:text-blue-400 transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
              ><path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.225 0z"
              ></path></svg
            >
          </a>
        </div>
      </div>

      <!-- Column 2: Simposio -->
      <div>
        <h4 class="font-bold text-neutral-900 dark:text-white mb-4">
          {footerContent.sympSection}
        </h4>
        <ul class="space-y-2 text-sm text-neutral-600 dark:text-neutral-400">
          {
            footerContent.sympLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-primary-800 dark:hover:text-secondary-400 transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Column 3: Contacto -->
      <div>
        <h4 class="font-bold text-neutral-900 dark:text-white mb-4">
          {footerContent.contactSection}
        </h4>
        <ul class="space-y-2 text-sm text-neutral-600 dark:text-neutral-400">
          <li class="flex items-center gap-2">
            <span class="material-icons text-xs">email</span>
            <a
              href={`mailto:${footerContent.contactEmail}`}
              class="hover:text-primary-800 dark:hover:text-secondary-400 transition-colors"
              >{footerContent.contactEmail}</a
            >
          </li>
          <li class="flex items-center gap-2">
            <span class="material-icons text-xs">place</span>
            <span>{footerContent.contactLocation}</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-neutral-200 dark:border-neutral-800 pt-8">
      <p class="text-center text-xs text-neutral-500 dark:text-neutral-400">
        {footerContent.copyright}
      </p>
    </div>
  </div>
</footer>
