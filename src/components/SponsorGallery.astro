---
interface Sponsor {
  name: string;
  type?: 'text' | 'logo';
  logo?: string;
  style?: string;
}

interface Props {
  sponsors: Sponsor[];
  title: string;
  description?: string;
}

const {
  sponsors,
  title,
  description
} = Astro.props;
---

<section class="py-16 bg-slate-50 dark:bg-slate-900 border-t border-slate-200 dark:border-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-16 text-center">
      <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-8 relative inline-block">
        {title}
        <span class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-16 h-1 bg-lime-500 rounded"></span>
      </h2>
      {description && (
        <p class="text-slate-600 dark:text-slate-400 mt-8">{description}</p>
      )}
    </div>

    <div class="flex flex-wrap justify-center items-center gap-12">
      {sponsors.map((sponsor) => (
        <div class={`flex justify-center h-24 opacity-70 hover:opacity-100 transition-opacity grayscale hover:grayscale-0 ${sponsor.type === 'logo' ? 'w-48' : 'w-40'}`}>
          {sponsor.type === 'logo' ? (
            <img 
              alt={sponsor.name}
              class="h-full object-contain" 
              src={sponsor.logo}
            />
          ) : (
            <span class={`text-center font-bold flex items-center justify-center ${sponsor.style || 'text-xl text-slate-700 dark:text-slate-300'}`}>
              {sponsor.name}
            </span>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
