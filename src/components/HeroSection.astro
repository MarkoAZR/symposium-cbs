---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  backgroundImage?: string;
  showStats?: boolean;
}

const {
  title,
  subtitle,
  ctaText = "Registrate Ahora",
  ctaHref = "/symposium-cbs/es/registro/",
  backgroundImage,
  showStats = true,
} = Astro.props;
---

<header
  class="relative overflow-hidden min-h-[80vh] md:min-h-[90vh] flex items-center pt-20"
>
  <!-- Background Image Overlay -->
  {
    backgroundImage && (
      <>
        <div
          class="absolute inset-0 bg-cover bg-center z-0"
          style={`background-image: url('${backgroundImage}')`}
        />
        <div class="absolute inset-0 bg-gradient-to-r from-neutral-900/95 via-neutral-900/80 to-primary-800/40 z-10" />
      </>
    )
  }

  {
    !backgroundImage && (
      <div class="absolute inset-0 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700 z-0" />
    )
  }

  <!-- Decorative Blur Elements -->
  <div
    class="absolute top-20 right-0 w-1/3 h-full opacity-20 z-10 pointer-events-none hidden lg:block"
  >
    <div class="w-96 h-96 bg-secondary-400 rounded-full filter blur-3xl"></div>
  </div>

  <!-- Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-20 w-full">
    <div class="lg:w-2/3 space-y-6">
      <!-- Badge -->
      <div
        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-secondary-600/20 border border-secondary-600/30 backdrop-blur-sm"
      >
        <span class="w-2 h-2 rounded-full bg-secondary-600 animate-pulse"
        ></span>
        <span
          class="text-secondary-300 font-semibold text-sm tracking-wide uppercase"
          >Registro Abierto</span
        >
      </div>

      <!-- Title -->
      <h1
        class="font-display font-extrabold text-5xl md:text-7xl text-white mb-6 leading-tight"
      >
        {title}
      </h1>

      <!-- Subtitle -->
      {
        subtitle && (
          <p class="text-lg md:text-xl text-neutral-300 mb-8 max-w-2xl leading-relaxed">
            {subtitle}
          </p>
        )
      }

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 mb-12">
        <a
          href={ctaHref}
          class="inline-flex justify-center items-center px-8 py-4 bg-secondary-600 hover:bg-secondary-500 text-neutral-900 font-bold rounded-lg transition-all transform hover:-translate-y-1 shadow-[0_0_20px_rgba(132,204,22,0.4)]"
        >
          {ctaText}
          <span class="material-icons ml-2">arrow_forward</span>
        </a>
        <a
          href="#about"
          class="inline-flex justify-center items-center px-8 py-4 bg-white/10 hover:bg-white/20 backdrop-blur-sm border border-white/20 text-white font-semibold rounded-lg transition-all"
        >
          Ver Detalles
        </a>
      </div>

      <!-- Stats Section -->
      {
        showStats && (
          <div class="grid grid-cols-2 md:grid-cols-3 gap-8 border-t border-white/10 pt-8">
            <div>
              <p class="text-secondary-300 font-bold text-xl">Mar 5-7, 2026</p>
              <p class="text-neutral-400 text-sm">Lima, Per√∫</p>
            </div>
            <div>
              <p class="text-white font-bold text-xl">Expertos</p>
              <p class="text-neutral-400 text-sm">Internacionales</p>
            </div>
            <div class="hidden md:block">
              <p class="text-white font-bold text-xl">Evento En/Es</p>
              <p class="text-neutral-400 text-sm">Virtual</p>
            </div>
          </div>
        )
      }
    </div>
  </div>
</header>
