---
interface Props {
  title: string;
  description: string;
  icon?: string;
  image?: string;
  href?: string;
  variant?: 'default' | 'featured' | 'minimal';
  tags?: string[];
}

const {
  title,
  description,
  icon,
  image,
  href,
  variant = 'default',
  tags = []
} = Astro.props;

const baseClasses = "group relative rounded-xl overflow-hidden transition-all duration-300";
const cardVariants = {
  default: "bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 shadow-md hover:shadow-lg hover:-translate-y-1",
  featured: "bg-gradient-to-br from-primary-800 to-primary-900 text-white shadow-lg hover:shadow-xl hover:-translate-y-2",
  minimal: "bg-transparent border border-neutral-300 dark:border-neutral-600 hover:border-secondary-600"
};
---

<div class={`${baseClasses} ${cardVariants[variant]}`}>
  {image && (
    <div class="relative h-48 overflow-hidden bg-neutral-200 dark:bg-neutral-700">
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      />
    </div>
  )}

  <div class="p-6">
    {icon && (
      <div class={`w-12 h-12 rounded-lg flex items-center justify-center mb-4 ${
        variant === 'featured' 
          ? 'bg-secondary-600/20 text-secondary-300'
          : 'bg-primary-50 dark:bg-primary-900/30 text-primary-800 dark:text-primary-300'
      }`}>
        <span class="material-icons">{icon}</span>
      </div>
    )}

    <h3 class={`font-bold text-lg mb-2 ${
      variant === 'featured' ? 'text-white' : 'text-neutral-900 dark:text-white'
    }`}>
      {title}
    </h3>

    <p class={`text-sm leading-relaxed mb-4 ${
      variant === 'featured' 
        ? 'text-neutral-100'
        : 'text-neutral-600 dark:text-neutral-400'
    }`}>
      {description}
    </p>

    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map(tag => (
          <span class={`text-xs font-semibold px-2 py-1 rounded ${
            variant === 'featured'
              ? 'bg-secondary-600/30 text-secondary-100'
              : 'bg-primary-100 dark:bg-primary-900/30 text-primary-800 dark:text-primary-300'
          }`}>
            {tag}
          </span>
        ))}
      </div>
    )}

    {href && (
      <a 
        href={href}
        class={`inline-flex items-center font-semibold text-sm transition-colors ${
          variant === 'featured'
            ? 'text-secondary-300 hover:text-secondary-100'
            : 'text-primary-800 dark:text-secondary-400 hover:text-secondary-600'
        }`}
      >
        Ver m√°s <span class="material-icons text-base ml-1">arrow_forward</span>
      </a>
    )}
  </div>
</div>
